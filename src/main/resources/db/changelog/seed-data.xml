<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">
    <changeSet id="seed-001-persons" author="developer" context="seed">
        <sqlFile path="db/sql/insert-persons.sql"
                 relativeToChangelogFile="false"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>
    <changeSet id="seed-002-person-sequence" author="developer" context="seed">
        <sqlFile path="db/sql/person-sequence-update.sql"
                 relativeToChangelogFile="false"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>
    <changeSet id="seed-003-conditional-persons" author="developer" context="seed-conditional">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM users</sqlCheck>
        </preConditions>
        <sqlFile path="db/sql/insert-persons.sql"
                 relativeToChangelogFile="false"
                 splitStatements="true"
                 stripComments="true"/>
    </changeSet>
</databaseChangeLog>